{% embed 'blocks/layout-wrapper/layout-wrapper.twig' with { blockName: 'breadcrumbs'} %}
	{% block block_content %}
        
        <nav class="breadcrumb-nav">
		
            {% if fields.source != 'custom' %}
                {% cache post.slug ~ '-breadcrumbs' fields %}
                    {{ function('triumph_breadcrumbs', '', '') }}
                {% endcache %}
            {% elseif fields.custom_breadcrumbs %}
                <ul class="breadcrumb-links">
                    {% for link in fields.custom_breadcrumbs %}
                        <li><a href="{{ link.link.url }}">{{ link.link.title }}</a></li>
                    {% endfor %}
                    <li><span class="current_page">{{ post.title }}</span></li>
                </ul>
            {% endif %}
			
        </nav>
		<div class="fade"></div>
        
	{% endblock %}
{% endembed %}
