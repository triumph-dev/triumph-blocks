{#
	Title: Checkerboard
	Description: Image/Copy stacked on top of each other
	Category: triumph-blocks
	Icon: align-center
	Keywords: 
	Mode: edit
	Align: left
	PostTypes: post page account leader partner service
	SupportsAlign: false
	SupportsMode: false
	SupportsMultiple: true
	SupportsAnchor: true
	SupportsCustomClassName: true
#}

{% set first_text_position = fields.first_text_position ? fields.first_text_position : 'left' %}
{% set classes = classes ~ ' ' ~ first_text_position %}
{% embed 'blocks/layout-wrapper/layout-wrapper.twig' %}
	{% block block_content %}
		{% for row in fields.rows %}
			{% set image = Image(row.image) %}
            <figure class="row" data-background-color="{{ row.background_color }}">
				<div class="image" data-pad="{{ fields.image_pad }}" >
					<img src="{{ image.src }}" srcset="{{ image.srcset }}" alt="{{ image.alt }}" data-object-fit="cover" loading="lazy"/>
					{% if row.crosshair_frame %}
						{% include "templates/blocks/crosshair-frame/crosshair-frame.twig" %}
					{% endif %}
				</div>
                <figcaption>
					<div class="checkerbard-copy-wrapper">
						{{row.copy}}
					</div>
				</figcaption>
            </figure>
        {% endfor %}
	{% endblock %}
{% endembed %}
