{#
  Title: Checkerboard
  Description: Image/Copy stacked on top of each other
  Category: triumph-blocks
  Icon: align-center
  Keywords: 
  Mode: edit
  Align: left
  PostTypes: post page
  SupportsAlign: false
  SupportsMode: false
  SupportsMultiple: true
#}


{% embed 'blocks/layout-wrapper/layout-wrapper.twig' with {blockName: 'checkerboard'} %}
	{% block block_content %}
		{% for row in fields.rows %}
            <figure class="row">
                {# This is rendered on mobile #}
                {% include "blocks/checkerboard/image.twig" %}

                {# Left-aligned image #}
                {% if loop.index is even %}
                    {% include "blocks/checkerboard/image.twig" %}
                {% endif %}

                {# Copy #}
                {% include "blocks/checkerboard/copy.twig" %}

                {# Right-aligned image #}
                {% if loop.index is odd %}
                    {% include "blocks/checkerboard/image.twig" %}
                {% endif %}

            </figure>
        {% endfor %}
	{% endblock %}
{% endembed %}
