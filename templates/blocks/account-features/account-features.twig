{% set account_details = function('account_features', fields.account) %}
{% embed 'blocks/layout-wrapper/layout-wrapper.twig' with {blockName: 'account-features' } %}
	{% block block_content %}
		{% if fields.intro_copy %}
			{% include 'blocks/intro-copy/intro-copy.twig' %}
		{% endif %}
		<ul class="account-features-list">
			{% for feature in account_details.features %}
				<li>{{ feature }}</li>
			{% endfor %}
		</ul>
		<div class="disclaimer">
			{{ account_details.disclaimer }}
		</div>
	
	{% endblock %}
{% endembed %}

