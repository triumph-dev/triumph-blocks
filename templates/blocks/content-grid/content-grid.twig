	Mode: edit
	Align: left
	PostTypes: post page account leader partner service
	SupportsAlign: false
	SupportsMode: false
	SupportsMultiple: true
	SupportsAnchor: true
	SupportsCustomClassName: true
#}

{% embed 'blocks/layout-wrapper/layout-wrapper.twig' with {blockName: 'content-grid' } %}
	{% block block_content %}

		{% if fields.intro_copy %}
			{% include 'blocks/intro-copy/intro-copy.twig' %}
		{% endif %}
		
		<ul class="content-grid-list" data-max-columns="{{ fields.grid_max_columns }}" data-align="{{ fields.grid_item_alignment }}">
		{% for grid_item in fields.grid_items %}
			{% include ['blocks/content-grid/item-' ~ fields.grid_item_style ~ '.twig', 'blocks/content-grid/item-default.twig'] %}
		{% endfor %}
		</ul>

		{% if fields.outro_copy %}
			<div class="outro-copy {{ fields.intro_copy_width }}">
				{{ fields.outro_copy }}
			</div>
		{% endif %}
    {% endblock %}

{% endembed %}
