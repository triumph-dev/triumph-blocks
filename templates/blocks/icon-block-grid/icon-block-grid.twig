{#
  Title: Icon Block Grid
  Description: A grid to present a collection of icon blocks
  Category: triumph-blocks
  Icon: grid-view
  Keywords: icon, grid
  Mode: edit
  Align: left
  PostTypes: post page
  SupportsAlign: false
  SupportsMode: false
  SupportsMultiple: true
#}

{% embed 'blocks/layout-wrapper/layout-wrapper.twig' with {blockName: 'icon-block-grid' } %}
	{% block block_content %}
		<div class="icon-blocks {{ fields.icon_blocks|length is divisible by(4) ? 'four-wide' : '' }}">
			{% for iconBlock in fields.icon_blocks %}
				{% include "templates/blocks/icon-block/icon-block.twig" with {iconBlock: iconBlock, index:loop.index} %}
			{% endfor %}
		</div>
	{% endblock %}
{% endembed %}
