{% extends "blocks/tease/tease.twig" %}

{% set cat_slug_array = [] %}
{% for category in post.categories %}
	{% set cat_slug_array = cat_slug_array|merge([category.slug]) %}
{% endfor %}

{% set tag_slug_array = [] %}
{% for tag in post.tags %}
	{% set tag_slug_array = tag_slug_array|merge([tag.slug]) %}
{% endfor %}

{% block content %}

	{% if post.thumbnail %}
		<a class="post-thumb-link" href="{{ post.link }}">
			<img class="post-thumb" src="{{ post.thumbnail.src('small') }}" srcset="{{ post.thumbnail.srcset }}" class="my-thumb-class" alt="Image for {{ post.title }}" />
		</a>
	{% endif %}

	<div class="meta">
		<div class="categories" data-categories="{{ cat_slug_array|join('+') }}">
			{% for category in post.categories %}
				<a class="{{category.slug}}" href="{{ category.link }}">{{ category.name }}</a>{{ loop.last ? '' : ',' }}
			{% endfor %}
		</div>

		<div class="tags" data-tags="{{ tag_slug_array|join('+') }}">
			{{ post.tags|join(', ') }}
		</div>
		<p>{{ post.date|date('F, d') }} <span class="year" data-year="{{ post.date|date('Y')}}">{{ post.date|date('Y') }}</span></p>
	</div>	
	
		<a class="post-title-link" href="{{ post.link }}"><h3>{{ post.title }}</h3></a>
		<p>{{ post.content|striptags|split(' ')|slice(0, 50)|join(' ') ~'...'}}</p>
		<a class="simple" href="{{ post.link }}">Read Article</a>
	

{% endblock %}