{#
	Title: Fuel Calculator
	Description: A calculator for determining fuel savings
	Category: triumph-blocks
	Icon: calculator
	Keywords: 
	Mode: edit
	Align: left
	PostTypes: post page account leader partner service
	SupportsAlign: false
	SupportsMode: false
	SupportsMultiple: true
	SupportsAnchor: true
	SupportsCustomClassName: true
#}

{% embed 'blocks/layout-wrapper/layout-wrapper.twig' with {blockName: 'fuel-calculator'} %}
	{% block block_content %}
		{% if fields.intro_copy %}
			{% include 'blocks/intro-copy/intro-copy.twig' %}
		{% endif %}
		<form name="fuelCalculator" data-multiplier={{ fields.multiplier ? fields.multiplier :  38.875 }}>
			<fieldset data-background-color="white">
				<h3>Your Company Information</h3>
				<label>Number of Trucks*
					<input id="trucks" name="trucks" type="number" placeholder="5" required>
				</label>

				<label>Miles per Week per Truck*
					<input id="truck-miles" name="truck-miles" type="number" placeholder="1000" required>
				</label>

				<label>Miles per Gallon*
					<input id="mpg" name="mpg" type="number" step="0.1" placeholder="6.5" required>
				</label>

				<label>Price you pay per gallon of Diesel*
					<input id="fuel-cost" name="fuel-cost" type="number" placeholder="2.53" step="0.01" required>
				</label>
				<br>

				<button class="btn accent border calculate">Calculate</button>
			</fieldset>

			<fieldset class="result" data-background-color="white">
				<h3>Results</h3>
				<label>Total spent on diesel<br>in a week:
					<output id="total-spent" name="total-spent">$0</output>
				</label>

				<label>Weekly Savings:
					<output id="savings-per-week" name="savings-per-week">$0</output>
				</label>

				<label>Monthly Savings:
					<output id="savings-per-month" name="savings-per-month">$0</output>
				</label>

				<label>Annual Savings:
					<output id="savings-per-year" name="savings-per-year">$0</output>
				</label>
			</fieldset>
		</form>
		{% if fields.outro_copy %}
			<div id="fuel-calculator-outro" class="container-sm hidden">
				{{ fields.outro_copy }}
			</div>
		{% endif %}
	{% endblock %}
{% endembed %}
