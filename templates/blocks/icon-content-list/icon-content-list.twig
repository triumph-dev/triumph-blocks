{#
	Title: Icon Content List
	Description: Vertical content list accompanied by icons.
	Category: triumph-blocks
	Icon: editor-ul
	Keywords: 
	Mode: edit
	Align: left
	PostTypes: post page account leader partner service
	SupportsAlign: false
	SupportsMode: false
	SupportsMultiple: true
	SupportsAnchor: true
	SupportsCustomClassName: true
#}

{% set classes = classes ~' layout-' ~ fields.content_layout %}
{% embed 'blocks/layout-wrapper/layout-wrapper.twig' %}
	{% block block_content %}
		{% if fields.intro_copy %}
			{% include 'blocks/intro-copy/intro-copy.twig' %}
		{% endif %}
		<ul class="content-list">
		{% for item in fields.items %}
			<li>
				{% if item.icon != "none" %}
					<div class="icon-wrapper">
						{{ function('svg_code', item.icon) }}
					</div>
				{% endif %}
				{% if item.content %}
					<div class="content">
						{{ item.content }}
					</div>
				{% endif %}
			</li>
		{% endfor %}
		</ul>
    {% endblock %}
{% endembed %}
