<nav id="menu" class="menu" role="navigation">
	<a class="menu-logo" href="{{site.url}}" rel="home" title="{{site.name}}" aria-label="Home">
		<img src="{{ site_logo_src() }}" alt="{{site.name}} Logo">
		<h2 class="site-name hidden">{{site.name}}</h2>
	</a>
	<button id="menu-toggle-button" class="menu-toggle" aria-label="menu toggle">
		<span></span>
		<span></span>
		<span></span>
	</button>

	<div id="menu-toggle-target" class="main-menu-wrapper" data-menu-state="closed">

		{% if menu.headerNav %}
			{% include 'blocks/menu-list/menu-list.twig' with {items: menu.headerNav.get_items, name: 'menu-header-nav'} %}
		{% endif %}

		{% if menu.headerRegister %}
			{% include 'blocks/menu-list/menu-list.twig' with {items: menu.headerRegister.get_items, name: 'menu-header-register'} %}
		{% endif %}

		{% if menu.headerLogin %}
			{% include 'blocks/menu-list/menu-list.twig' with {items: menu.headerLogin.get_items, name: 'menu-header-login'} %}
		{% endif %}

		{% if menu.headerGetStarted %}
			{% include 'blocks/menu-list/menu-list.twig' with {items: menu.headerGetStarted.get_items, name: 'menu-header-get-started', isButton:'true'} %}
		{% endif %}

	</div>
</nav>