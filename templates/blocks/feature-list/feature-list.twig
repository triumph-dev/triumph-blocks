	Mode: edit
	Align: left
	PostTypes: post page account leader partner service
	SupportsAlign: false
	SupportsMode: false
	SupportsMultiple: true
	SupportsAnchor: true
	SupportsCustomClassName: true
#}



{% embed 'blocks/layout-wrapper/layout-wrapper.twig' %}
	{% block block_content %}
		{% for feature in fields.features %}
			{% set image = Image(feature.icon) %}
			<div class="feature" style="-ms-grid-column:{{loop.index}};">
				<img src="{{ image.src }}" srcset="{{ image.srcset }}" loading="lazy"/>
				<div class="copy">
					{{ feature.copy }}
				</div>
			</div>
		{% endfor %}
	{% endblock %}
{% endembed %}